</head>
<body>
   <div class="main">
      <div class="main_left">
         <div id = "videos_grid" class="videos_grid">
         </div>
         <div class="main_controls">
            <div class="main_controls_block">
               <div onclick="muteUnmute()" class="main_controls_button main_mute_button">
                  <i></i>
                  <span>Mute</span>
               </div>
               <div onclick="playStop()" class="main_controls_button main_video_button" >
                  <i></i>
                  <span>Stop Video</span>
               </div>
            </div>
            <div class="main_controls_block">
               <div onclick="drowsinessButtonClicked()" class="main_controls_button">
                  <i></i>
                  <span>Drowsiness Check</span>
               </div>
               <div class="main_controls_button">
                  <i></i>
                  <span>Participants</span>
               </div>
               <div onclick="chatOnChatOff()" class="main_controls_button main_chat_button">
                  <i></i>
                  <span>Chat</span>
               </div>
               <div onclick="shareButtonClicked()" class="main_controls_button ">
                  <i></i>
                  <span class="sharescreen">Share Screen</span>
               </div>
               <div onclick="surveyButtonClicked()" class="main_controls_button ">
                  <i></i>
                  <span class="surveys">Surveys</span>
               </div>
               <div onclick="fileButtonClicked()" class="main_controls_button ">
                  <span class="file-upload">Upload files</span>
               </div>
               <div onclick="showFiles()" class="main_controls_button ">
                  <span class="files-download">Download files</span>
               </div>
<!--               <div onclick="stopShareButtonClicked()" class="main_controls_button">-->
<!--                  <span class="stop-share-screen" style="color: red; visibility: hidden">Stop Sharing</span>-->
<!--               </div>-->
            </div>
            <div onclick="leavingMeetingButtonClicked()" class="main_controls_block">
               <div class="main_controls_button">
                  <span class="leave_meeting" id="leave_button">Leave Meeting</span>
               </div>
            </div>
         </div>
      </div>
      <div class="main_right">
         <div class="main__header">

         </div>
         <div class="main_chat_window">
            <ul class="messages">
            </ul>
         </div>
         <div class="main__message_container">
            <input id="chat_message" name="chat_message" placeholder="Type text here..." class="chat_message" type="text">
         </div>
      </div>
   </div>
   <div class="disconnect_message">
     <span class="dc_msg_itself">
     </span>
   </div>
   <div class="enter-name" id="enter-name">
      <span id="enter-name-text">Enter your name:</span>
      <br>
      <input class="enter-name-input" type="text" id="name-input" required>
      <button class="enter-name-button" id="name-button">Enter</button>
   </div>
   <div class="survey-form" id="survey-form">
      <form>
      <span class="survey-form-text">Enter your poll:</span>
      <br>
      <input class="survey-form-question" type="text" id="name-input" required>
      <br>
      <span class="survey-form-text">Enter your options:</span>
      <br>
      <input class="survey-form-option" type="text" required>
      <button class="survey-form-add-options" id="survey-form-add-options">Add more options</button>
      <br>
      <button type="submit" class="survey-form-submit-button" id="survey-form-submit-button">Create Form!</button>
      </form>
   </div>
   <div class="upload_file_message">
     <span class="upload_msg">
     </span>
   </div>
</body>
</html>
