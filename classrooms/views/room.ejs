   <script src="script.js" defer></script>


</head>
<body>
   <div class="main">
      <div class="main_left">
         <div id = "videos_grid" class="videos_grid">
         </div>
         <div class="main_controls">
            <div class="main_controls_block">
               <div onclick="muteUnmute()" class="main_controls_button main_mute_button">
                  <img src="sound.png"/>
                  <span>Mute</span>
               </div>
               <div onclick="playStop()" class="main_controls_button main_video_button" >
                  <img src="pause_video.png"/>
                  <span>Stop Video</span>
               </div>
            </div>
            <div class="main_controls_block">
               <div onclick="drowsinessButtonClicked()" class="main_controls_button" id="main_control_drowsiness">
                  <img src="drowsiness_check.png"/>
                  <span>Drowsiness Check</span>
               </div>
               <div onclick="participantsOnOff()" class="main_controls_button">
                  <img src="participants.png"/>
                  <span>Participants</span>
               </div>
               <div onclick="chatOnChatOff()" class="main_controls_button main_chat_button">
                  <img src="chat.png"/>
                  <span>Chat</span>
               </div>
               <div onclick="shareButtonClicked()" class="main_controls_button ">
                  <img src="share_screen.png"/>
                  <span class="sharescreen">Share Screen</span>
               </div>
               <div onclick="surveyButtonClicked()" class="main_controls_button" id="main_control_survey">
                  <img src="polls.png"/>
                  <span class="surveys">Surveys</span>
               </div>
               <div onclick="fileButtonClicked()" class="main_controls_button ">
                  <img src="upload_files.png"/>
                  <span class="file-upload">Upload files</span>
               </div>
               <div onclick="showFiles()" class="main_controls_button ">
                  <img src="download_files.png"/>
                  <span class="files-download">Download files</span>
               </div>
            </div>
            <div onclick="leavingMeetingButtonClicked()" class="main_controls_block">
               <div class="main_controls_button">
                  <span class="leave_meeting" id="leave_button">Leave Meeting</span>
               </div>
            </div>
         </div>
      </div>
      <div class="main_right">
         <div class="main__header">

         </div>
         <div class="main_chat_window">
            <ul class="messages">
            </ul>
         </div>
         <div class="main__message_container">
            <input id="chat_message" name="chat_message" placeholder="Type text here..." class="chat_message" type="text">
         </div>
      </div>
   </div>
   <div class="disconnect_message">
     <span class="dc_msg_itself">
     </span>
   </div>
   <div class="awake_message">
     <span class="dc_msg_itself">
     </span>
   </div>
   <div class="enter-name" id="enter-name">
      <span id="enter-name-text">Enter your name:</span>
      <br>
      <input class="enter-name-input" type="text" id="name-input" required>
      <button class="enter-name-button" id="name-button">Enter</button>
   </div>
   <div class="survey-form" id="survey-form">
      <span class="survey-form-text">Enter your poll:</span>
      <br>
      <input class="survey-form-question" type="text" id="survey-form-question" required>
      <br>
      <span class="survey-form-text">Enter your options:</span>
      <br>
      <input class="survey-form-option survey-form-last-input" type="text" required>
      <button onclick="addMoreOptions()" class="survey-form-add-options" id="survey-form-add-options">Add more options</button>
      <br>
      <button onclick="disappear_form()" class="survey-form-submit-button" id="survey-form-submit-button">Create Form!</button>
   </div>
   <div class="participants-popup" id="participants-popup">
      <!-- For each member - add a button to mute - audio or video, and name, and private message sending. -->
   </div>
   <div class="participants-popup" id="private-message-popup">
      <input type="text" id="private-message-input">
      <button onclick="sendPrivateMessage()" class="send-pm">Send Private Message</button>
      <br>
      <button onclick="cancelPrivateMessage()" class="cancel-pm">Cancel</button>
      <input type="hidden" id="pm-address" value="">
   </div>
   <div class="upload_file_message">
     <span class="upload_msg">
     </span>
   </div>
</body>
</html>
